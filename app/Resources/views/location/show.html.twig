{% extends 'base.html.twig' %}

{% block body %}
    <h1>Location</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ location.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ location.type }}</td>
            </tr>
            <tr>
                <th>Typedetail</th>
                <td>{{ location.typeDetail }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ location.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ location.address }}</td>
            </tr>
            <tr>
                <th>Postalcode</th>
                <td>{{ location.postalcode }}</td>
            </tr>
            <tr>
                <th>Town</th>
                <td>{{ location.town }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ location.phone }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ location.mail }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ location.website }}</td>
            </tr>
            <tr>
                <th>Facebook</th>
                <td>{{ location.facebook }}</td>
            </tr>
            <tr>
                <th>Rank</th>
                <td>{{ location.rank }}</td>
            </tr>
            <tr>
                <th>Openhour</th>
                <td>{{ location.openhour }}</td>
            </tr>
            <tr>
                <th>Rateclear</th>
                <td>{{ location.rateclear }}</td>
            </tr>
            <tr>
                <th>Minrate</th>
